---
const today = new Date();
---

<style>
    .footer {
        position: fixed;
        left: 0;
        bottom: 0;
        width: 100%;
        background-color: rgba(51, 51, 51, 0.6);
        backdrop-filter: blur(10px);        /* frosted glass blur */
        -webkit-backdrop-filter: blur(10px);
        color: white;
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 10px 10px 0px 0px;
        height: 40px;
    }

    .footer p {
        text-align: center;
        margin: 0em;
        padding: 0%;
        font-size: medium;
    }

    .smaller {
        color: dimgray;
    }
</style>

<div class="footer">
    <p class="smaller" style="text-align: right; font-size: small; padding-right: 0.3%; padding-top: 0.1%">Built with {Astro.generator}</p>
    <p>&copy; {today.getFullYear()} Goons Tower Defense. All rights reserved.</p>

</div>