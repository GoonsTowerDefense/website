<style>

    nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: rgba(51, 51, 51, 0.6);  /* semi-transparent */
        backdrop-filter: blur(10px);        /* frosted glass blur */
        -webkit-backdrop-filter: blur(10px);/* Safari support */
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 0 0 10px 10px;
        padding: 0 20px;
        flex-wrap: wrap;
        height: 60px;
        box-sizing: border-box;
    }

    body {
        margin: 0;
        padding-top: 60px;
    }

    .nav-left,
    .nav-right {
        display: flex;
        align-items: center;
    }

    .nav-left a,
    .nav-right a {
        color: white;
        text-decoration: none;
        padding: 14px;
        transition: background-color 0.3s, color 0.3s;
    }

    .nav-left a:hover,
    .nav-right a:hover {
        background-color: #555;
        color: lightcoral;
        border-radius: 5px;
    }

    .menu-toggle {
        display: none;
        flex-direction: column;
        cursor: pointer;
    }

    .menu-toggle span {
        height: 3px;
        width: 25px;
        background: white;
        margin: 4px 0;
        transition: 0.4s;
    }

    .mobile-menu {
        display: none;
        flex-direction: column;
        width: 100%;
        background: rgba(51, 51, 51, 0.6);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        padding: 10px 0;
        z-index: 999; /* Still above main content */
    }



.mobile-menu a {
    padding: 12px;
    text-align: center;
    border-top: 1px solid #444;
    color: white;
    text-decoration: none;
    transition: background-color 0.3s, color 0.3s;
}

/* Hover effect for mobile menu links */
.mobile-menu a:hover {
    background-color: #555;
    color: lightcoral;
    border-radius: 5px;
}


    /* Responsive Styles */
    @media (max-width: 768px) {
        .nav-left,
        .nav-right {
            display: none;
        }

        .menu-toggle {
            display: flex;
        }

        .mobile-menu.show {
            display: flex;
        }
    }
</style>

<nav>
    <div class="nav-left">
        <a href="/">Home</a>
        <a href="/members">Members</a>
        <a href="/login">Login</a>
    </div>

    <div class="nav-right">
        <a href="https://example.com">IP: play.gtdmc.org</a>
    </div>

    <!-- Hamburger Icon -->
    <div class="menu-toggle">
        <span></span>
        <span></span>
        <span></span>
    </div>
</nav>

<div class="mobile-menu">
    <a href="/">Home</a>
    <a href="/members">Members</a>
    <a href="/login">Login</a>
    <a href="https://example.com">IP: play.gtdmc.org</a>
</div>


